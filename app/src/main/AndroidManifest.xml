<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipes">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".RecipeApplication"
        android:allowBackup="false"
        android:icon="@mipmap/recipe_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/recipe_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name="com.example.recipes.presentation.ui.recipes.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.ui.recipes.RecipesActivity"
            android:theme="@style/Theme.Recipes"/>
    </application>

</manifest>